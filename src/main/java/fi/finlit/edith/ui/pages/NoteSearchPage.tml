<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">

    <p:title>${message:notesearch}</p:title>

    <t:form t:id="searchForm">
        <t:errors />
        <t:textfield value="searchTerm" />
        <br />
        <input type="submit" value="${message:search}" />
    </t:form>

    <t:if test="notes">
        <t:if test="!notes.empty">
            <table class="searchresults">
                <tr>
                    <th>${message:lemma}</th>
                    <th>${message:basicForm}</th>
                    <th>${message:longText}</th>
                    <th>${message:meaning}</th>
                    <th>${message:explanation}</th>
                </tr>

                <t:pagedList t:source="notes" t:value="note" t:pageSize="20">
                    <tr>
                        <td>${note.lemma}</td>
                        <td>${note.basicForm}</td>
                        <td>${note.longText}</td>
                        <td>${note.meaning}</td>
                        <td>${note.explanation}</td>
                    </tr>
                </t:pagedList>
            </table>
            <p:else>${message:no-results}</p:else>
        </t:if>
    </t:if>
    
    <p:breadcrumbs>
        <a t:type="pageLink" t:page="index">${message:frontpage}</a>
        &gt; ${message:notesearch}
    </p:breadcrumbs>

    <p:eastPanel>
        <t:dashboard />
    </p:eastPanel>

    <p:westPanel>west</p:westPanel>

</html>
