<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">

    <p:title>${message:notesearch}</p:title>

	<h2>${message:notesearch}</h2>

    <t:form t:id="search">
        <t:errors />
        <t:textfield value="searchTerm" />
        <input type="submit" value="${message:search}" />
        <t:if test="notes">
            <div id="editcontrols">
                <t:if test="!editMode">
                    <t:actionlink t:id="toggleEdit">${message:editLemma}</t:actionlink>
                    <p:else>
                        <t:actionlink t:id="cancel">${message:cancel}</t:actionlink>
                    </p:else>
                </t:if>
            </div>
            <div class="cleaner"> </div>
         </t:if>
    </t:form>

    <t:if test="notes">
        <t:form t:id="edit">
            
            <div id="formcontrols">
                <t:if test="editMode">
                    <input type="submit" value="${message:save}" />
                </t:if>
            </div>
            
            <div class="cleaner"> </div>
            <t:grid source="notes" row="note" rowsPerPage="20" t:encoder="encoder"
                 include="lemma" add="description,subtextSources,basicForm,meaning,noteSelection">
                <p:lemmaCell>
                    <t:if test="editMode">
                        <t:inlineEditField t:id="lemma" value="note.lemma"/>
                        <p:else>
                            <em>${note.lemma}</em>
                        </p:else>
                    </t:if>
                </p:lemmaCell>
                <p:basicFormCell>
                    ${note.term?.basicForm}
                </p:basicFormCell>
                <p:descriptionCell>
                    <!--t:if test="editMode">
                        <t:inlineField t:id="description" value="documentNote.note.description" value1="documentNote.note.description" />
                        <p:else-->
                            <t:markdown value="note.description"/>
                        <!--/p:else>
                    </t:if-->
                </p:descriptionCell>                
                <p:meaningCell>
                        ${note.term?.meaning}
                </p:meaningCell>
                <p:subtextSourcesCell>
                	<!--t:if test="editMode">
                        <t:inlineField t:id="subtextSources" value="documentNote.note.subtextSources" value1="documentNote.note.subtextSources" />
                        <p:else-->
                            <t:markdown value="note.subtextSources"/>
                        <!-- /p:else>
                    </t:if-->
                </p:subtextSourcesCell>
                <p:statusCell>
					<t:fmt.message key="NoteStatus.${note.status}"/>
                </p:statusCell>

				<p:noteSelectionCell>
					<t:checkbox value="noteSelected" />			
				</p:noteSelectionCell>

                <p:empty>
                    <p>${message:no-results}</p>
                </p:empty>
            </t:grid>
            
            <t:submit t:id="removeSelected" value="${message:remove-selected}"/>
            
        </t:form>
        <p:else>
            <p>${message:no-results}</p>
        </p:else>
    </t:if>

    <p:rightPanel>
    
    </p:rightPanel>

</html>
