<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">

    <p:title>${message:notesearch}</p:title>

    <t:form t:id="search">
        <t:errors />
        <t:textfield value="searchTerm" />
        <input type="submit" value="${message:search}" />
        <t:if test="documentNotes">
            <div id="editcontrols">
                <t:if test="!editMode">
                    <t:actionlink t:id="toggleEdit">${message:edit}</t:actionlink>
                    <p:else>
                        <t:actionlink t:id="cancel">${message:cancel}</t:actionlink>
                    </p:else>
                </t:if>
            </div>
            <div class="cleaner"> </div>
         </t:if>
    </t:form>

    <t:if test="documentNotes">
        <t:form t:id="edit">
            <div id="formcontrols">
                <t:if test="editMode">
                    <input type="submit" value="${message:save}" />
                </t:if>
            </div>
            <div class="cleaner"> </div>
            <t:grid source="documentNotes" row="documentNote" rowsPerPage="20" t:encoder="encoder"
                include="lemma,longText,description,subtextSources" add="documentRevision,basicForm,meaning,status,actions">
                <p:lemmaCell>
                    <t:if test="editMode">
                        <t:inlineField t:id="lemma" value="documentNote.note.lemma" value1="documentNote.note.lemma"/>
                        <p:else>
                            <em>${documentNote.note.lemma}</em>
                        </p:else>
                    </t:if>
                </p:lemmaCell>
                <p:documentRevisionCell>
                    ${documentNote.document?.title}
                </p:documentRevisionCell>
                <p:basicFormCell>
                    ${documentNote.note.term?.basicForm}
                </p:basicFormCell>
                <p:longTextCell>
                    ${documentNote.longText}
                </p:longTextCell>
                <p:descriptionCell>
                    <t:if test="editMode">
                        <t:inlineField t:id="description" value="documentNote.note.description" value1="documentNote.note.description" />
                        <p:else>
                            <t:markdown value="documentNote.note.description"/>
                        </p:else>
                    </t:if>
                </p:descriptionCell>                
                <p:meaningCell>
                        ${documentNote.note.term?.meaning}
                </p:meaningCell>
                <p:subtextSourcesCell>
                	<t:if test="editMode">
                        <t:inlineField t:id="subtextSources" value="documentNote.note.subtextSources" value1="documentNote.note.subtextSources" />
                        <p:else>
                            <t:markdown value="documentNote.note.subtextSources"/>
                        </p:else>
                    </t:if>
                </p:subtextSourcesCell>
                <p:statusCell>
					<t:fmt.message key="NoteStatus.${documentNote.status}"/>
                </p:statusCell>
                <p:actionsCell>
                	<span class="delete_note">
                		<a href="" class="delete_question">${message:delete}</a>
                		<span class="delete_dialog">
                    		${message:delete}? <t:actionlink t:id="delete" context="documentNote.id">${message:yes}</t:actionlink>
                    		/ <a href="" class="delete_note_decline">${message:no}</a>
                    	</span>
                    </span>
                </p:actionsCell>
                <p:empty>
                    <p>${message:no-results}</p>
                </p:empty>
            </t:grid>
        </t:form>
        <p:else>
            <p>${message:no-results}</p>
        </p:else>
    </t:if>

    <p:rightPanel>
    
    </p:rightPanel>

</html>
