<html t:type="layout"  
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
      
    <p:title>${document.title}</p:title>  

    <div class="content">
        <t:document.view document="documentRevision"/>
    </div>
        
    <p:leftPanel>
    <div id="document_links">
            <span>
            <a t:type="pageLink" t:page="document/annotatePage" t:context="document.id">${message:to-annotate-document}</a>
        </span>
        <span>
            <a t:type="pageLink" t:page="document/viewPage" t:context="document.id">${message:to-view-document}</a> 
        </span>
        <span>
            <t:pagelink page="document/printPage" t:context="[document.id,documentRevision.revision]">${message:printVersion}</t:pagelink>
        </span>
        <span>
           ${message:publishVersion}
        </span>
        <span>
            <t:actionlink t:id="publish" t:context="[document.id,documentRevision.revision]">${message:publish}!</t:actionlink>
        </span>
        </div>
    </p:leftPanel>

    <p:rightPanel>
        <div class="panel narrow">
            <h3>${message:notes}</h3>
            <t:if test="documentNotes">
                <t:note.view documentNotes="documentNotes"/>
            <p:else>${message:no-notes}</p:else>
            </t:if>
            <div style="clear:both;"></div>
        </div>    
    </p:rightPanel>

</html>
