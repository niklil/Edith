<html t:type="layout"  
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
      
    <p:title>${document.title}</p:title>  

    <div class="content">
        <t:document.view document="documentRevision"/>
    </div>
        
    <p:leftPanel>
        <p>
        	<a t:type="pageLink" t:page="document/annotatePage" t:context="${document.id}">${message:to-annotate-document}</a>
        </p>
        <p>
            <t:pagelink page="document/printPage" t:context="[document.id,documentRevision.revision]">${message:printVersion}</t:pagelink>
        </p>
    </p:leftPanel>

    <p:rightPanel>
        <div class="panel narrow">
            <h3>${message:notes}</h3>
            <t:if test="documentNotes">
                <ul class="notes">
                    <t:loop source="documentNotes" value="documentNote">
                    <li>
                        <a href="#start${documentNote.localId}" class="notelink"><em>${documentNote.note.lemma}</em></a>
                        <t:note.metadata note="documentNote.note"/>
                    </li>
                    </t:loop>
                </ul>        
                <p:else>${message:no-notes}</p:else>
            </t:if>
            <div style="clear:both;"></div>
        </div>    
    </p:rightPanel>

</html>
