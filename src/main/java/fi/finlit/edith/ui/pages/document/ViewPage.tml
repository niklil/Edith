<html t:type="layout"  
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
      
    <p:title>${document.title}</p:title>  
            
    <div style="float: right">
        <t:pagelink page="document/printPage" t:context="${document.id}">${message:print}</t:pagelink>
    </div>


    <div class="content">
        <t:document.view document="documentRevision"/>        
    </div>

    <div style="clear:both;"></div>
    
    <p:breadcrumbs>
        <a t:type="pageLink" t:page="index">${message:frontpage}</a> 
        &gt; <a t:type="pageLink" t:page="documentsPage">${message:documents}</a>
        &gt; ${document.title}
    </p:breadcrumbs>     
        
    <p:eastPanel>
        <t:dashboard/>
        <div class="panel">
            <h3>${message:revisions}</h3>
            TODO
        </div>
    </p:eastPanel>

    <p:westPanel>
        <div class="panel" style="border: none; text-align: center;">
            <h3>${message:pages}</h3>
            <t:document.pages document="documentRevision"/>
        </div>
    </p:westPanel>

</html>
