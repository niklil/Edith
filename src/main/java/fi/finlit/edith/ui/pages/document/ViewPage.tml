<html t:type="layout"  
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
      
    <p:title>${document.title}</p:title>  
            
    <div style="text-align: right">
        <t:pagelink page="document/printPage" t:context="${document.id}">${message:print}</t:pagelink>
    </div>
    <div style="clear:both;"/>

    <div class="content">
        <t:document.view svnPath="${document.svnPath}" revision="literal:-1"/>        
    </div>
        
    <p:eastPanel>
        <t:dashboard/>
        <div class="panel">
            <h3>${message:revisions}</h3>
            TODO
        </div>
    </p:eastPanel>

    <p:westPanel>
        <div class="panel" style="border: none; text-align: center;">
            <h3>${message:pages}</h3>
            <t:document.pages svnPath="${document.svnPath}" revision="literal:-1"/>
        </div>
    </p:westPanel>

</html>
