<html t:type="layout"  
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
      
    <p:title>${message:documents}</p:title>  

    <t:grid source="documents" row="document" exclude="id,title,svnPath,description" add="view,annotate">
        <p:viewCell>
          <a t:type="pageLink" t:page="document/viewPage" t:context="${document.id}">${document.title}</a>
        </p:viewCell>
        <p:annotateCell>
          <a t:type="pageLink" t:page="document/annotatePage" t:context="${document.id}">${message:annotate-document}</a>
        </p:annotateCell>
        <p:empty>
            <p>${message:no-documents}</p>
        </p:empty>
    </t:grid>

    <h3>${message:add-document}</h3>
   
    <t:document.upload/>
        
    <p:rightPanel>
        
    </p:rightPanel>

</html>
