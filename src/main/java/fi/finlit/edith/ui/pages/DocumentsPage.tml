<html t:type="layout"  
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
      
    <p:title>${message:documents}</p:title>  

    <!-- TODO : make this a tree -->

    <ul>
        <li t:type="loop" t:source="documents" t:value="document">
            <a t:type="pageLink" t:page="document/viewPage" t:context="${document.id}">${document.title}</a>  
            (<a t:type="pageLink" t:page="document/annotatePage" t:context="${document.id}">${message:annotate-document}</a>)
        </li>
    </ul>
        
    <p:eastPanel>
        <t:dashboard/>
    </p:eastPanel>

    <p:westPanel>
        west
    </p:westPanel>

</html>
