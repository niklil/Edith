<html t:type="layout"  
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
      
    <p:title>${message:documents}</p:title>  

    <ul>
    <t:loop source="documents" value="document">
        <li>
            <a t:type="pageLink" t:page="document/viewPage" t:context="${document.id}">${document.title}</a>
            <!-- 
            <ul class="actions">
                <li>
                    <a t:type="pageLink" t:page="document/annotatePage" t:context="${document.id}">${message:annotate-document}</a>
                </li>
            </ul>
             -->                   
        </li>    
    </t:loop>
    </ul>
    
    <h3>${message:add-document}</h3>
    
    <t:form t:id="uploadForm">
      <t:errors/>
      <input t:type="upload" t:id="file" validate="required"/>
      <input type="submit" value="${message:submit}"/>
    </t:form>
    
    <p:breadcrumbs>
        <a t:type="pageLink" t:page="index">${message:frontpage}</a> &gt; ${message:documents}
    </p:breadcrumbs>        
        
    <p:eastPanel>
        <t:dashboard/>
    </p:eastPanel>

    <p:westPanel>
        west
    </p:westPanel>

</html>
